{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "target": "es5",
    "preserveConstEnums": true,
    "declaration": true,
    "module": "es6",
    "outDir": "dist/ts",
    "lib": [
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true
  },
  "include": ["src/*"]
}